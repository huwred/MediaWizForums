@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<MediaWiz.Forums.ViewModels.SearchViewModel>
@{
    var ForumUrl = Umbraco.GetDictionaryValue("Forums.ForumUrl", "/")?.TrimEnd('/');
}


<form action="@ForumUrl/ForumSearch" class="col-10 offset-1">
    <fieldset>
        <div class="form-group">
            <label for="searchIn" class="col-2 col-form-label">Search In</label>
            <div class="col-6">
                <select id="searchIn" name="searchIn" class="form-control">
                    <option value="Subject">Subject</option>
                    <option value="Message">Subject + Message</option>
                    <option value="Username">Post creator</option>
                </select>
                
            </div>

        </div>
        <div class="form-group">
            <label for="query" class="col-2 col-form-label">Look for</label>
            <div class="input-group mb-3">
                <input id="query" name="query" placeholder="Search terms" value="@Model.query" type="text" class="form-control" required="required">
                <button name="submit" type="submit" class="btn btn-primary">Search</button>
            </div>
        </div>

    </fieldset>
</form>
