@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using Umbraco.Cms.Core.Services
@using MediaWiz.Forums.Extensions
@inject ILocalizationService LocalizationService
@{
    int pagenum = ViewBag.Page;
    int totalPages = ViewBag.TotalPages;
    if (pagenum == 0)
    {
        pagenum = 1;
    }
    var requestquery = Context.Request.QueryString.ToString();
    var querystring = 
        !String.IsNullOrWhiteSpace(requestquery.Replace("&page=" + pagenum, "").Replace("?page=" + pagenum, "")) 
        ? requestquery.Replace("&page=" + pagenum, "").Replace("?page=" + pagenum, "") + "&" 
        : "?";
}
<ul class="pagination list-unstyled">
    @if (pagenum > 1)
    {
        <li class="page-link"><a href="@($"{querystring}page={pagenum - 1}")">@LocalizationService.GetOrCreateDictionaryValue("Forums.Paging.Previous","Prev")</a></li>
    }
    @for (var p = 1; p < totalPages + 1; p++)
    {
        <li class="page-link @(p == pagenum ? "active" : string.Empty)">
            @if (p == pagenum)
            {
                @p
            }
            else
            {
                <a href="@($"{querystring}page={p}")">@p</a>
            }
                
        </li>
    }
    @if (pagenum < totalPages)
    {
        <li class="page-link"><a href="@($"{querystring}page={pagenum + 1}")">@LocalizationService.GetOrCreateDictionaryValue("Forums.Paging.Next","Next")</a></li>
    }
</ul>
